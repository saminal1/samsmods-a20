<configs>

	<append xpath="/blocks">
		<block name="goreBlockRandomHelperM">
			<property name="CustomIcon" value="goreBlockHumanBones"/>
			<property name="CustomIconTint" value="ff8080"/>
			<property name="Material" value="Morganic"/>
			<property name="MaxDamage" value="80"/>
			<property name="Shape" value="ModelEntity"/>
			<property name="Model" value="Entities/Gore/humanSkeletonGorePrefab"/>
			<property name="Place" value="TowardsPlacerInverted"/>
			<property name="Collide" value="melee,bullet,arrow,rocket"/>
			<property name="IsTerrainDecoration" value="true"/>
			<property name="FallDamage" value=".9"/>
			<property name="ImposterExclude" value="true"/>
			<property name="ImposterDontBlock" value="true"/>
			<drop event="Harvest" name="foodRottingFlesh" count="1" tag="allHarvest" tool_category="Butcher"/>
