<configs>    
	
	<!-- SJ: Currently only worrying about 8k maps -->                                                                                                
	<!-- Increase number of towns -->
	<set xpath="rwgmixer/world[@name='medium']/property[@class='town']/property[@name='few']/@value">2</set>
	<set xpath="rwgmixer/world[@name='medium']/property[@class='town']/property[@name='default']/@value">4</set>
	<set xpath="rwgmixer/world[@name='medium']/property[@class='town']/property[@name='many']/@value">6</set>
	
	<!-- Increase number of cities -->
	<set xpath="rwgmixer/world[@name='medium']/property[@class='city']/property[@name='few']/@value">3</set>
	<set xpath="rwgmixer/world[@name='medium']/property[@class='city']/property[@name='default']/@value">5</set>
	<set xpath="rwgmixer/world[@name='medium']/property[@class='city']/property[@name='many']/@value">7</set>
	
	<!-- Increase size of cities -->
	<set xpath="rwgmixer/world[@name='medium']/property[@class='city']/property[@name='mintiles']/@value">18</set>
	<set xpath="rwgmixer/world[@name='medium']/property[@class='city']/property[@name='maxtiles']/@value">23</set>
	
	<!-- Increase Wilderness POIs -->
	<set xpath="rwgmixer/world[@name='medium']/property[@class='wilderness']/property[@name='few']/@value">450</set>
	<set xpath="rwgmixer/world[@name='medium']/property[@class='wilderness']/property[@name='default']/@value">500</set>
	<set xpath="rwgmixer/world[@name='medium']/property[@class='wilderness']/property[@name='many']/@value">600</set>
	

</configs>